<Page x:Class="Good_Teacher.Pages.Manual.ManualP_5SaveAndExport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Good_Teacher.Pages.Manual"
      xmlns:strings="clr-namespace:Good_Teacher.Strings"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="400"
      Title="ManualP_5SaveAndExport">

    <StackPanel>

        <TextBlock TextWrapping="Wrap" Text="{x:Static strings:ManualStrings.P5SaveExport}" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" />

        <TextBlock TextWrapping="Wrap" Margin="0,20" Text="{x:Static strings:ManualStrings.SaveAndExport}" FontSize="14" />

        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20" Text="{x:Static strings:ManualStrings.BuildWarning}" FontSize="14" Foreground="#FFD35400" />

        <Image Source="/Good Teacher;component/Resources/Manual/Manual_Export.png" RenderOptions.BitmapScalingMode="Fant" Margin="0,0,0,15" Width="350" />

    </StackPanel>
</Page>
